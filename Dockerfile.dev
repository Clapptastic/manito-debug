# Development Dockerfile for ManitoDebug
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    git \
    curl \
    bash \
    postgresql-client \
    && rm -rf /var/cache/apk/*

# Copy package files first for better caching
COPY package*.json ./
COPY client/package*.json ./client/
COPY server/package*.json ./server/
COPY core/package*.json ./core/

# Install dependencies using npm workspaces (skip all scripts to avoid issues)
RUN npm install --ignore-scripts

# Copy remaining source code
COPY . .

# Create necessary directories
RUN mkdir -p server/uploads server/logs client/dist scripts/test-upload

# Set environment variables for dynamic port management
ENV NODE_ENV=development
ENV ENABLE_DYNAMIC_PORTS=true
ENV PORT_MANAGER_STRATEGY=minimal
ENV PORT_HEALTH_CHECK_TIMEOUT=5000
ENV PORT_MAX_RETRIES=5
ENV PORT_AUTO_REASSIGN=true

# Port ranges for dynamic assignment
ENV SERVER_PORT_RANGE_START=3000
ENV SERVER_PORT_RANGE_END=3999
ENV CLIENT_PORT_RANGE_START=3000
ENV CLIENT_PORT_RANGE_END=3999
ENV DATABASE_PORT_RANGE_START=5432
ENV DATABASE_PORT_RANGE_END=5439
ENV REDIS_PORT_RANGE_START=6379
ENV REDIS_PORT_RANGE_END=6389
ENV MONITORING_PORT_RANGE_START=9091
ENV MONITORING_PORT_RANGE_END=9099

# Email Configuration - Ensures manito.ai emails are accepted
ENV ALLOWED_EMAIL_DOMAINS=manito.ai,manito.com,gmail.com,yahoo.com,outlook.com,hotmail.com

# Expose dynamic port ranges
EXPOSE 3000-3999 5432-5439 6379-6389 9091-9099 9229

# Health check with dynamic port support
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || \
        curl -f http://localhost:3001/api/health || \
        curl -f http://localhost:3002/api/health || exit 1

# Development startup script
COPY scripts/start-dev.sh /usr/local/bin/start-dev.sh
RUN chmod +x /usr/local/bin/start-dev.sh

# Set the default command
CMD ["/bin/bash", "/usr/local/bin/start-dev.sh"]