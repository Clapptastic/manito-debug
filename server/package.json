{
  "name": "@manito/server",
  "version": "1.0.0",
  "type": "module",
  "description": "Express.js server for ManitoDebug with AI integration, Code Knowledge Graph, and multi-language analysis",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon index.js",
    "dev:watch": "nodemon --watch . --ext js,json index.js",
    "dev:debug": "nodemon --inspect index.js",
    "start": "node index.js",
    "start:prod": "NODE_ENV=production node index.js",
    "start:cluster": "node --experimental-cluster index.js",
    "build": "echo 'No build required for server'",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "test:verbose": "npm test -- --verbose",
    "test:debug": "NODE_OPTIONS='--inspect' npm test",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules package-lock.json",
    "clean:install": "npm run clean && npm install",
    "health": "curl -s http://localhost:3000/api/health | jq .",
    "migrate": "node run-migrations.js",
    "migrate:reset": "node run-migrations.js --reset",
    "seed": "node scripts/seed-database.js",
    "analyze": "npm ls --depth=0",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "docker": "docker build -t manito-server .",
    "docker:run": "docker run -p 3000:3000 manito-server",
    "docker:compose": "docker-compose up server",
    "logs": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "monitor": "node scripts/monitor-server.js",
    "backup": "node scripts/backup-database.js",
    "restore": "node scripts/restore-database.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@manito/core": "*",
    "@supabase/supabase-js": "^2.55.0",
    "adm-zip": "^0.5.16",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.18.0",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^2.0.0",
    "faiss-node": "^0.5.1",
    "fb-watchman": "^2.0.2",
    "helmet": "^7.2.0",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "openai": "^4.0.0",
    "pg": "^8.11.0",
    "pgvector": "^0.1.8",
    "triple-beam": "^1.4.1",
    "winston": "^3.10.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/uploads/"
    ]
  }
}
